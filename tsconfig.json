{
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "jsx": "react",
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "declaration": true,
        "stripInternal": true,
        "strict": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "useDefineForClassFields": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,

    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}